# Extension configuration for phpstan-rules
# This file provides default configuration for phpstan-rules
# Note: This package includes phpstan-strict-rules and phpstan-deprecation-rules as dependencies.
# These strict rules are enabled by default (matching phpstan.neon in this package):
# - disallowedEmpty: true
# - strictFunctionCalls: true
# - strictArrayFilter: true
#
# Other rules can be enabled in your project's phpstan.neon by setting them to true.

# Include the strict and deprecation rules
includes:
    - vendor/phpstan/phpstan-strict-rules/rules.neon
    - vendor/phpstan/phpstan-deprecation-rules/rules.neon

parameters:
    strictRules:
        # Disallowed constructs
        disallowedLooseComparison: false
        disallowedBacktick: false
        disallowedEmpty: true
        disallowedImplicitArrayCreation: false
        disallowedShortTernary: false
        
        # Boolean conditions
        booleansInConditions: false
        booleansInLoopConditions: false
        
        # Cast rules
        uselessCast: false
        
        # Constructor rules
        requireParentConstructorCall: false
        illegalConstructorMethodCall: false
        
        # Loop rules
        overwriteVariablesWithLoop: false
        
        # Function rules
        closureUsesThis: false
        strictFunctionCalls: true
        strictArrayFilter: true
        
        # Method rules
        matchingInheritedMethodNames: false
        
        # Arithmetic operators
        numericOperandsInArithmeticOperators: false
        
        # Dynamic calls
        dynamicCallOnStaticMethod: false
        
        # Switch conditions
        switchConditionsMatchingType: false
        
        # Variable variables
        noVariableVariables: false

