{
  "name": "pekral/phpstan-rules",
  "description": "Extensible package of custom rules for PHPStan.",
  "type": "library",
  "keywords": [
    "phpstan",
    "rules",
    "static analysis",
    "coding standard",
    "quality",
    "php"
  ],
  "homepage": "https://github.com/pekral/phpstan-rules",
  "license": ["MIT"],
  "authors": [
    {
      "name": "Petr Kr√°l",
      "email": "kral.petr.88@gmail.com",
      "homepage": "https://github.com/pekral",
      "role": "Maintainer"
    }
  ],
  "support": {
    "issues": "https://github.com/pekral/phpstan-rules/issues",
    "source": "https://github.com/pekral/phpstan-rules"
  },
  "require": {
    "php": "^8.4",
    "phpstan/phpstan": "^2.1.31",
    "phpstan/phpstan-deprecation-rules": "^2.0.3",
    "phpstan/extension-installer": "^1.4.3",
    "phpstan/phpstan-strict-rules": "^2.0.7"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "pekral/phpcs-rules": "^0.4.2"
  },
  "autoload": {
    "psr-4": {
      "Pekral\\PhpstanRules\\": "src/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "scripts": {
    "phpcs": "phpcs --standard=vendor/pekral/phpcs-rules/ruleset.xml examples/ build/",
    "phpcs-fix": "phpcbf --standard=vendor/pekral/phpcs-rules/ruleset.xml examples/ build/ || true",
    "phpstan": "phpstan analyse examples/ build/",
    "check-strict-rules": "php build/check-strict-rules.php",
    "check": "composer phpcs && composer phpstan && composer check-strict-rules",
    "fix": "composer phpcs-fix"
  }
}
